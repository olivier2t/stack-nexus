# Cycloid
variable "customer" {}
variable "env" {}
variable "project" {}


#
# VPC
#
variable "vpc_id" {
  type        = string
  description = "The ID of the VPC."
  default     = ""
}

variable "public_subnets" {
  type        = list(string)
  description = "The public subnets for the VPC."
  default     = ["10.0.0.0/24"]
}


#
# Bastion
#
variable "instance_type" {
  description = "Instance type for the Nexus Repository"
  default     = "t3.micro"
}

variable "disk_size" {
  description = "Disk size for the Nexus Repository (Go)"
  default = 20
}

variable "ebs_optimized" {
  description = "Whether the Nexus Repository Instance is EBS optimized or not, related to the instance type you choose."
  default = false
}

variable "keypair_public" {
  description = "The public SSH key, for SSH access to newly-created instances"
  default = "ssh-rsa  email@example.com"
}

variable "extra_tags" {
  default = {}
}

locals {
  standard_tags = {
    "cycloid.io" = "true"
    env          = var.env
    project      = var.project
    customer     = var.customer
  }
  merged_tags = merge(local.standard_tags, var.extra_tags)
}